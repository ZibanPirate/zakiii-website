  //- YouTube subscribe button
  script(src="https://apis.google.com/js/platform.js")
  //- Twitter follow button
  script(async src="https://platform.twitter.com/widgets.js" charset="utf-8")
  //- Github star button
  script(async defer src="https://buttons.github.io/buttons.js")

  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1')

  title="{|page title|}"
  link(rel="icon" href=require("src/assets/ico/logo-compact.ico").default)
  meta(name='description' content="{|page description|}")
  meta(name='keywords' content="{|page keywords|}")
  meta(property="og:image" content= require("src/assets/jpg/og-image_{|language code|}.jpg").default)
  meta(name="theme-color" content= "#5c9220")

  style.
    body { margin: 0; padding: 0; }
    #splash-screen {
      position: absolute;
      width: 100vw;
      height: 100vh;
      background: #fff;
    }
    #splash-screen::after {
      content: "";
      position: absolute;
      left: 50%; top: 50%;
      transform: translate(-50%, -50%);

      width: 200px;
      height: 200px;

      background-image: url("#{require('!!base64-inline-loader!../../../assets/svg/logo-compact.svg')}");
      background-position: center;
      background-size: cover;
    }
    body > #splash-screen {
      z-index: 1000;
    }
    * {
      font-family: "Tajawal", -apple-system, BlinkMacSystemFont, "Segoe UI", "PingFang SC", "Hiragino Sans GB",
        "Microsoft YaHei", "Helvetica Neue", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji",
        "Segoe UI Symbol";
    }

- dir = ("{|language code|}" === "ar" ? "rtl" : "ltr");

body(dir=dir)
  div#splash-screen
  div#app-container
    div#splash-screen
