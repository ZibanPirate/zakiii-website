  meta(name='viewport' content='width=device-width, initial-scale=1')

  title= title
  link(rel="icon" href="#{require('src/.assets/ico/logo-compact.ico').default}")
  meta(name='description' content= description)
  meta(name='keywords' content= keywords)
  meta(property="og:image" content= og_image)
  meta(name="theme-color" content= theme)
  style.
    body { margin: 0; padding: 0; }
    #splash-screen {
      position: absolute;
      width: 100vw;
      height: 100vh;
      background: #fff;
    }
    #splash-screen::after {
      content: "";
      position: absolute;
      left: 50%; top: 50%;
      transform: translate(-50%, -50%);

      width: 200px;
      height: 200px;

      background-image: url("#{require('!!base64-inline-loader!../../../.assets/svg/logo-compact.svg')}");
      background-position: center;
      background-size: cover;
    }
    body > #splash-screen {
      z-index: 1000;
    }

body
  div#splash-screen
  div#app-container
    div#splash-screen
