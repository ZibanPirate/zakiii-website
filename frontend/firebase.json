{
  "hosting": {
    "public": "out",
    "site": "zakiii",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/ar{,/**}",
        "destination": "/ar/index.html"
      },
      {
        "source": "!/[a-z][a-z]{,/**}",
        "destination": "/index.html"
      }
    ]
  }
}
