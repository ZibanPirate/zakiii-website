{
  "hosting": {
    "public": "out",
    "site": "zakiii",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "{,/ar}/Articles/**",
        "function": "articles"
      },
      {
        "source": "{,/ar}/Books/**",
        "function": "books"
      },
      {
        "source": "/ar{,/**}",
        "destination": "/ar/index.html"
      },
      {
        "source": "!/[a-z][a-z]{,/**}",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "cd \"$RESOURCE_DIR\" && yarn lint",
      "cd \"$RESOURCE_DIR\" && yarn build"
    ]
  }
}
